<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/_525sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pop_background"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_close"
            android:layout_marginEnd="-3dp"
            android:layout_marginTop="-8dp"/>

        <LinearLayout
            android:layout_width="@dimen/_450sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_start_again"
                android:id="@+id/iv_startAgain"
                android:layout_marginStart="@dimen/_15sdp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_go_next"
                android:id="@+id/iv_goNext"
                android:layout_marginEnd="@dimen/_26sdp"/>

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/data_"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>